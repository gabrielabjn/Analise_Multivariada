sigma<-cov(iris[-5])
sigma.inv<-solve(sigma)

iris[1,]

apply(iris[-5],2,mean)

scale(iris[,1], center = TRUE, scale = F)
iris.center<-apply(iris[-5], 2, FUN = scale, center = T, scale = F)
iris.center[1,]%*%sigma.inv%*%(iris.center[1,])
